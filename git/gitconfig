[core]
  editor = nvim
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore
  pager = delta

[interactive]
  diffFilter = delta --diff-so-fancy --color-only --features=interactive

[delta]
  navigate = true
  light = false
  side-by-side = true
  line-numbers = true
  features = decorations
  syntax-theme = Monokai Extended Origin
  true-color = always

[merge]
  conflictStyle = diff3
  editor = nvim
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore
  pager = less -R

[push]
  default = current

[pull]
  rebase = true

[diff]
  colorMoved = default
  rebase = true

[color]
  ui = auto

[color "status"]
  added = yellow
  changed = green
  untracked = blue

[alias]
  loga = log --oneline --graph --color --decorate
  s = status -s -b

[credential]
  helper = store
